<% content_for :body_class, "dashboard-bg" %>
<div class="center">
  <div class="centered-container">
    <h2 class="white">Welcome to your <%= image_tag "ACC-Horizontal-Logo_wht.png", height: "auto", width: "50%" %> Dashboard!</h2>
    <div class="btn-group-vertical">
      <%= button_to "Share your Event", new_event_path, class: "form-input btn btn-default", method: :get %><br>
      <%= button_to "Share your Story", new_story_path, class: "form-input btn btn-default", method: :get %><br>
      <%= button_to "Share your Artwork", new_artwork_path, class: "form-input btn btn-default", method: :get %><br>

      <%= button_to "Update My Account", edit_user_path(@user), class: "form-input btn btn-default", method: :get %><br>

      <% if community_leader? %>
      <%= button_to "Pending Submissions", submissions_path, class: "form-input btn btn-default", method: :get %>
      <% end %>

      <% if admin? %>
      <%= button_to "See Unowned Pending Submissions", admin_unowned_submissions_path, class: "form-input btn btn-default", method: :get %>
      <%= button_to "See All Pending Submissions", admin_submissions_path, class: "form-input btn btn-default", method: :get %>
      <%= button_to "Add Community Leader", new_admin_user_path, class: "form-input btn btn-default", method: :get %>
      <%= button_to "Manage Organizations", admin_organizations_path, class: "form-input btn btn-default", method: :get %>
      <%= button_to "Manage Event Types", admin_types_path, class: "form-input btn btn-default", method: :get %>
      <% end %>
    </div>

    <h1 class="white">My Organizations</h1>
      <% if @user.organizations.empty? %>
        <h5 class="white">You aren't affiliated with any organizations. Update your account above to add one!</h5>
      <% else %>
        <ul class="list-group">
          <% @user.organizations.each do |org| %>
            <li class="list-group-item btn btn-default form-input"><%= org.name %></li>
          <% end %>
        </ul>
      <% end %>
  </div>
</div>

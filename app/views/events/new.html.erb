<%= form_for @event do |f| %>
  <%= f.text_field :title, placeholder: "Title" %>
  <%= f.text_field :host_contact, placeholder: "Host Contact Email" %>
  <%= f.text_field :organization, placeholder: "Host Organization" %>
  <%= f.text_field :description, placeholder: "Description" %>
  <%= f.text_field :address, placeholder: "Location" %>
  <%= f.text_field :date, placeholder: "Date" %>
  <%= f.text_field :time, placeholder: "Time" %>
  <%= f.submit "Submit Event for Approval" %>
<% end %>

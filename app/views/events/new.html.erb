<%= form_for @event do |f| %>
  <%= f.text_field :title, placeholder: "Title" %>
  <%= f.text_field :host_contact, placeholder: "Host Contact Email" %>
  <%= f.select :organization, @organizations, prompt: "Host Organization" %>
  <%= f.text_field :description, placeholder: "Description" %>
  <%= f.text_field :address, placeholder: "Location" %>
  <%= f.date_select :date, start_year: Date.today.year %>
  <%= f.time_select :time, ampm: true, minute_step: 15 %>
  <%= f.submit "Submit Event for Approval" %>
<% end %>

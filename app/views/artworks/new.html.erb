<div class="center">
  <%= form_for @artwork do |f| %>
    <%= f.text_field :title, placeholder: "Title", class: "form-input" %>
    <%= f.text_field :artist, placeholder: "Artist", class: "form-input" %>
    <%= f.text_field :description, placeholder: "Description", class: "form-input" %>
    <%= f.text_field :address, placeholder: "Location", class: "form-input" %>
    <%= f.submit "Submit Artwork for Approval", class: "form-input btn btn-success" %>
  <% end %>
</div>

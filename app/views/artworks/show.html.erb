<% content_for :body_class, "artwork-bg" %>
<div class="aes-center">
  <div id="left-arrow"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true" data-neighborhood="<%= @artwork.neighborhood.name if @artwork.neighborhood %>" data-type="artworks"></span></div>
  <div class="aes-container">
    <div class="centered-container">
      <div class="aes-format">
        <h1 id="title"><%= @artwork.title %></h1>
      </div>
      <div class="aes-format">
        <h3>By <%= @artwork.artist %></h3>
      </div>
      <% if @artwork.image.file %>
        <div class="aes-format">
          <img src="<%= @artwork.image %>" alt="artwork image"/><br>
        </div>
      <% end %>
      <div class="aes-format">
        <%= @artwork.description %>
      </div>
      <div class="aes-format">
        <%= @artwork.address %>
      </div>
      <div class="aes-format">
        Posted At: <%= @artwork.formatted_update_time %>
      </div>
      <% if @artwork.deletable_by?(current_user) %>
        <div class="aes-format">
          <%= button_to "Delete", artwork_path(@artwork), class: "btn btn-danger", method: :delete %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="art" id="right-arrow">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true" data-neighborhood="<%= @artwork.neighborhood.name if @artwork.neighborhood %>" data-type="artworks"></span>
  </div>
</div>

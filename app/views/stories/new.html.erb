<div class="center">
  <%= form_for @story do |f| %>
    <%= f.text_field :title, placeholder: "Title", class: "form-input" %>
    <%= f.text_field :author, placeholder: "Author", class: "form-input" %>
    <%= f.text_field :youtube_link, placeholder: "YouTube Link", class: "form-input" %>
    <%= f.text_field :description, placeholder: "Description", class: "form-input" %>
    <%= f.text_field :address, placeholder: "Location", class: "form-input" %>
    <%= f.text_area :body, placeholder: "Story", class: "form-input" %>
    <%= f.submit "Submit Story for Approval", class: "form-input btn btn-success" %>
  <% end %>
</div>
